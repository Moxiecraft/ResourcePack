{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:display_context",
    "cases": [
      {
        "model": {
          "type": "minecraft:select",
          "property": "minecraft:custom_model_data",
          "cases": [
            {
              "when": "netherite_scythe",
              "model": {
                "type": "minecraft:model",
                "model": "moxiecraft:item/netherite_scythe"
              }
            },
            {
              "when": "netherite_glaive",
              "model": {
                "type": "minecraft:model",
                "model": "moxiecraft:item/netherite_glaive"
              }
            },
            {
              "when": "netherite_hook_spear",
              "model": {
                "type": "minecraft:model",
                "model": "moxiecraft:item/netherite_hook_spear"
              }
            }
          ],
          "fallback": {
            "type": "minecraft:model",
            "model": "minecraft:item/netherite_spear"
          }
        },
        "when": [
          "gui",
          "ground",
          "fixed",
          "on_shelf"
        ]
      }
    ],
    "fallback": {
      "type": "minecraft:select",
      "property": "minecraft:custom_model_data",
      "cases": [
        {
          "when": "netherite_scythe",
          "model": {
            "type": "minecraft:model",
            "model": "moxiecraft:item/netherite_scythe_in_hand"
          }
        },
        {
          "when": "netherite_glaive",
          "model": {
            "type": "minecraft:model",
            "model": "moxiecraft:item/netherite_glaive_in_hand"
          }
        },
        {
          "when": "netherite_hook_spear",
          "model": {
            "type": "minecraft:model",
            "model": "moxiecraft:item/netherite_hook_spear_in_hand"
          }
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "minecraft:item/netherite_spear_in_hand"
      }
    }
  },
  "swap_animation_scale": 1.95
}